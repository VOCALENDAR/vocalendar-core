<h2><%= t ".title" %></h2>
<table>
  <thead>
    <tr>
      <th class="var"><%= t "activerecord.attributes.setting.var" %></th>
      <th class="value"><%= t "activerecord.attributes.setting.value" %></th>
      <th class="updated_at date"><%= t "activerecord.attributes.setting.updated_at" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @settings.each do |setting| %>
    <tr id="s-<%= setting.var %>">
      <td class="var">
        <%= setting.var %>
      </td>
      <td class="value">
        <%= setting.value %>
      </td>
      <td class="updated_at date">
        <%= l setting.updated_at %>
      </td>
      <td>
        <%= link_to %Q{<i class="icon-trash" title="#{t 'general.delete'}"></i>}.html_safe, setting, confirm: t("general.delete_confirm", name: setting.var), method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
