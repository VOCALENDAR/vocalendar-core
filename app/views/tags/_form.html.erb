<%= form_for(@tag) do |f| %>
<% if @tag.new_record? %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<% end %>

<div>
  <% @tag.link || @tag.build_link %>
  <%= f.label :link %>
  <%= f.fields_for :link do |lf| %>
  <%= lf.text_field :name, class: 'input-mini', placeholder: t('general.name') %>
  <%= lf.text_field :uri, class: 'input-xxlarge', placeholder: 'URL' %>
  <% end %>
</div>

<br>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary'%>
    <%= link_to t("general.back"), url_for(@tag), class: 'btn' %>
    <%= link_to t("general.back_to_list"), url_for(action: :index), class: 'btn' %>
  </div>
<% end %>
