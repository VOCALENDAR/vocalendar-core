<%= form_for(@tag) do |f| %>
<% if @tag.new_record? %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<% end %>

<div>
  <%= f.label :link_uri %>
  <%= f.text_field :link_uri, class: 'input-xxlarge', placeholder: 'URL' %>
</div>

<br>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary'%>
    <%= link_to t("general.back"), url_for(@tag), class: 'btn' %>
    <%= link_to t("general.back_to_list"), url_for(action: :index), class: 'btn' %>
  </div>
<% end %>
