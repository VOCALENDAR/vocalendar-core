<h2><%= t ".title" %></h2>

<table>
  <thead>
    <tr>
      <th><%= Calendar.human_attribute_name :name %></th>
      <th><%= Calendar.human_attribute_name :external_id %></th>
      <th><%= Calendar.human_attribute_name :io_type %></th>
      <th><%= Calendar.human_attribute_name :synced_at %></th>
      <th><%= Calendar.human_attribute_name :events %></th>
      <th></th>
  </thead>
  <tbody>
    <% @calendars.each do |cal| %>
    <tr>
      <td><%= link_to cal.name, edit_calendar_path(cal) %></td>
      <td><%= cal.external_id %></td>
      <td><%= t "activerecord.attributes.calendar.io_type_#{cal.io_type}" %></td>
      <td><%= cal.synced_at.blank? ? '' : l(cal.synced_at) %></td>
      <td><%= cal.events.count %></td>
      <td><%= link_to %Q{<i class="icon-trash" title="#{t 'general.delete'}"></i>}.html_safe, cal, confirm: t("general.delete_confirm", name: "#{cal.name} (#{cal.external_id})"), method: :delete %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t("general.add"), new_calendar_path, :class => 'btn' %>

